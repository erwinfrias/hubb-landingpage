extends ../template.pug
append variables
  - pageTitle       = 'About Us'
  - metaDescription = 'Our mission is to unite people by making it easy to discover and plan cool experiences together.'
  - ogUrl           = 'https://hubb-me.com/about.html'
  - ogImage         = 'https://hubb-me.com/assets/images/hubb.jpg'

block body
  //- Hero Section
  section.about
    .about__container.l-container
      h1(class="about__title", data-about="About Us") About Us
      p.about__description Hubb is an app that make it easy and fun to send and receive invites to hang out with friends in real life. If you live for live experiences, Hubb is the place to be. Create plans, chat with friends, book events, and share multimedia content, all within the Hubb app.
      img(class="about__image about__image--left", src="/assets/images/pillar.png", alt="Hubb Pillar")
      img(class="about__image about__image--right", src="/assets/images/bottom-stairs.png", alt="Hubb Stairs")
